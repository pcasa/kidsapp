<%- model_class = BowelMovement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:bowel_time) %></th>
      <th><%= model_class.human_attribute_name(:consistency) %></th>
      <th><%= model_class.human_attribute_name(:color) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bowel_movements.each do |bowel_movement| %>
      <tr>
        <td><%= bowel_movement.bowel_time.try(:strftime, '%D %r') %></td>
        <td><%= bowel_movement.consistency %></td>
        <td><%= bowel_movement.color %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_child_bowel_movement_path(@parent, @child, bowel_movement), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_child_bowel_movement_path(@parent, @child, bowel_movement),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_child_bowel_movement_path(@parent, @child),
            :class => 'btn btn-primary' %>
